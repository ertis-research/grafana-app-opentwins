{
  "$schema": "https://raw.githubusercontent.com/grafana/grafana/master/docs/sources/developers/plugins/plugin.schema.json",
  "type": "app",
  "name": "OpenTwins",
  "id": "ertis-opentwins-app",
  "info": {
    "description": "Grafana app plugin for digital twins",
    "author": {
      "name": "ERTIS"
    },
    "keywords": ["panel", "template"],
    "logos": {
      "small": "img/logo.svg",
      "large": "img/logo.svg"
    },
    "links": [
      { "name": "Website", "url": "https://github.com/ertis-research/OpenTwins" },
      { "name": "License", "url": "https://github.com/ertis-research/OpenTwins?tab=Apache-2.0-1-ov-file#readme" }
    ],
    "screenshots": [],
    "version": "1.1.0",
    "updated": "%TODAY%"
  },
  "includes": [
    {
      "type": "page",
      "name": "Twins",
      "addToNav": true,
      "path": "/a/ertis-opentwins-app",
      "role": "Viewer",
      "defaultNav": true,
      "icon": "file-alt"
    },
    {
      "type": "page",
      "name": "Twins",
      "addToNav": true,
      "path": "/a/ertis-opentwins-app/twins",
      "role": "Viewer",
      "icon": "file-alt"
    },
    {
      "type": "page",
      "name": "Types",
      "addToNav": true,
      "path": "/a/ertis-opentwins-app/types",
      "role": "Viewer",
      "icon": "folder-plus"
    },
    {
      "type": "page",
      "name": "Connections",
      "addToNav": true,
      "path": "/a/ertis-opentwins-app/connections",
      "role": "Editor",
      "icon": "plug"
    },
    {
      "type": "page",
      "name": "Policies",
      "addToNav": true,
      "path": "/a/ertis-opentwins-app/policies",
      "role": "Editor",
      "icon": "shield"
    },
    {
      "type": "page",
      "name": "Config",
      "path": "/plugins/ertis-opentwins-app/?page=configuration",
      "role": "Admin",
      "addToNav": true,
      "icon" : "sliders-v-alt"
    }
  ],
  "routes": [
    {
      "path": "ditto/*",
      "url": "{{ .JsonData.dittoURL }}",
      "headers": [
        {
          "name": "Authorization",
          "content": "Basic {{ .SecureJsonData.dittoBasicAuth }}"
        }
      ]
    },
    {
      "path": "dittodevops/*",
      "url": "{{ .JsonData.dittoURL }}",
      "headers": [
        {
          "name": "Authorization",
          "content": "Basic {{ .SecureJsonData.dittoDevopsBasicAuth }}"
        }
      ]
    },
    {
      "path": "extended/*",
      "url": "{{ .JsonData.extendedURL }}",
      "headers": [
        {
          "name": "Authorization",
          "content": "Basic {{ .SecureJsonData.dittoBasicAuth }}"
        }
      ]
    },
    {
      "path": "agents/*",
      "url": "{{ .JsonData.agentsURL }}"
    }
  ],
  "dependencies": {
    "grafanaDependency": ">=7.0.0",
    "grafanaVersion": "7.0.0",
    "plugins": []
  }
}